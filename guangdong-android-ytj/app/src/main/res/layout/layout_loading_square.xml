<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rl_square_loading"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_printing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/black_33"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:text="@string/ticket_printing"
        />
    <ImageView
        android:id="@+id/iv_square_loading"
        android:layout_below="@id/tv_printing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/loading_anim_list"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>